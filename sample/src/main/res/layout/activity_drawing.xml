<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".DrawingActivity">

    <Button
        android:id="@+id/addTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add text" />

    <Button
        android:id="@+id/addInsomniaRegularTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/addTextButton"
        android:layout_alignParentBottom="true"
        android:text="Add text" />

    <Button
        android:id="@+id/addDroidRobotTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/addInsomniaRegularTextButton"
        android:layout_alignParentBottom="true"
        android:text="Add text" />

</RelativeLayout>
